<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".MenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/buttonShared"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SHARED"
            android:layout_marginVertical="5sp"
            />

        <Button
            android:id="@+id/buttonListas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LISTAS"
            android:layout_marginVertical="5sp"
            />

        <Button
            android:id="@+id/buttonDb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BASE DE DATOS"
            android:layout_marginVertical="5sp"
            />

        <Button
            android:id="@+id/buttonVistas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VISTAS"
            android:layout_marginVertical="5sp"
            />

        <Button
            android:id="@+id/buttonSplash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SPLASH"
            android:layout_marginVertical="5sp"
            />

        <Button
            android:id="@+id/buttonMvp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Model View Presenter"
            android:layout_marginVertical="5sp"
            />

        <Button
            android:id="@+id/buttonCalculatorMvp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calculadora MVP"
            android:layout_marginVertical="5dp"
            />

        <Button
            android:id="@+id/buttonExamenUnidadI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Examen Unidad I"
            android:layout_marginVertical="5sp"
            />

        <Button
            android:id="@+id/buttonMvvm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MVVM"
            android:layout_marginVertical="5sp"
            />

        <Button
            android:id="@+id/buttonFigurasMvvm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Figuras MVVM"
            android:layout_marginVertical="5sp"
            />

        <Button
            android:id="@+id/buttonRest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Consumo REST"
            android:layout_marginVertical="5sp"
            />

        <Button
            android:id="@+id/buttonDatastore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Firebase Datastore"
            android:layout_marginVertical="5sp"
            />

        <Button
            android:id="@+id/buttonAuthFirebase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Auth Firebase"
            android:layout_marginVertical="5sp"
            />

        <Button
            android:id="@+id/buttonGoogleMaps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Google Maps"
            android:layout_marginVertical="5sp"
            />

        <Button
            android:id="@+id/buttonRomano"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NÃºmeros a romano"
            android:layout_marginVertical="5sp"
            />

    </LinearLayout>

</ScrollView>